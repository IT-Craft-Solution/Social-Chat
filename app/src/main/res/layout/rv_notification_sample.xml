<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5mdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/igNotificationDp"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:padding="4dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txNotificationMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alicia Addams mention you in a comment: Nice Try"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_8mdp"
        android:textSize="@dimen/_14font_mdp"
        app:layout_constraintStart_toEndOf="@+id/igNotificationDp"
        app:layout_constraintTop_toTopOf="@+id/igNotificationDp" />

    <TextView
        android:id="@+id/txNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours"
        app:layout_constraintStart_toStartOf="@+id/txNotificationMsg"
        app:layout_constraintTop_toBottomOf="@+id/txNotificationMsg" />

</androidx.constraintlayout.widget.ConstraintLayout>
